{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/mindmap/*": ["mindmap/*"],
      "@/review/*": ["review/*"],
      "@/shared/*": ["shared/*"],
      "@/local-testing": ["local-testing/index.ts"],
      "@/local-testing/*": ["local-testing/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}